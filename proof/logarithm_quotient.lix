# log_b(x/y) = log_b(x) - log_b(y) for x,y > 0

fn log_b(b R, x R) R:
    dom:
        b > 0
        b != 1
        x > 0
    then:
        b ^ log_b(b, x) = x

let b R, x R, y R:
    b > 0
    b != 1
    x > 0
    y > 0

# Start with x/y
x/y = x/y

# Express both sides using logarithms
b^(log_b(b, x/y)) = x/y
b^(log_b(b, x) - log_b(b, y)) = (b^log_b(b, x))/(b^log_b(b, y)) = x/y

# Since the bases are equal and positive, the exponents must be equal
log_b(b, x/y) = log_b(b, x) - log_b(b, y)
